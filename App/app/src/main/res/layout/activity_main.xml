<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Card Number Input -->
    <EditText
        android:id="@+id/cardNumberInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0000 0000 0000 0000"
        android:inputType="number"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Sum Input -->
    <EditText
        android:id="@+id/sumInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="1 000 000"
        android:inputType="number"
        android:padding="12dp"
        android:layout_below="@id/cardNumberInput"
        android:layout_marginBottom="32dp"/>

    <!-- Next Button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_below="@id/sumInput"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"/>

    <!-- Navigation Buttons -->
    <LinearLayout
        android:id="@+id/navigationButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nextButton"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher"
            android:contentDescription="Button 1" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher"
            android:contentDescription="Button 2" />

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher"
            android:contentDescription="Button 3" />

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher"
            android:contentDescription="Button 4" />
    </LinearLayout>

</RelativeLayout>